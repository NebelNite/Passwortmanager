<Window x:Class="PasswortmanagerWPF.PasswordGeneratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Generator" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <CheckBox Grid.Row="0" x:Name="lowercaseCheckBox" Content="Include Lowercase" IsChecked="True" Checked="lowercaseCheckBox_Checked"/>
        <CheckBox Grid.Row="1" x:Name="uppercaseCheckBox" Content="Include Uppercase" IsChecked="True" Checked="uppercaseCheckBox_Checked"/>
        <CheckBox Grid.Row="2" x:Name="numericCheckBox" Content="Include Numeric" Checked="numericCheckBox_Checked"/>
        <CheckBox Grid.Row="3" x:Name="specialCheckBox" Content="Include Special Characters" Checked="specialCheckBox_Checked"/>
        <Slider Grid.Row="4" x:Name="lengthSlider" Minimum="1" Maximum="50" Value="21"/>
        <TextBlock Grid.Row="4" Text="{Binding ElementName=lengthSlider, Path=Value, StringFormat='Password Length: {0}'}" Margin="5"/>

        <Button Grid.Row="5" Content="Confirm" Click="ConfirmButton_Click" HorizontalAlignment="Center" Margin="5"/>
    </Grid>
</Window>
